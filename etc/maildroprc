xfilter "/usr/local/bin/spamdrop -r $4"

VMAILDIR=/var/vmail/domains
DOMAINDIR=$VMAILDIR/$6
MAILDIR=$DOMAINDIR/$5/

`[ -d $DOMAINDIR ]`
if ( $RETURNCODE == 1 )
{
	A=`/bin/mkdir $DOMAINDIR`

	`[ -d $MAILDIR/cur ]`
	if( $RETURNCODE == 1 )
	{
		B=`/usr/local/bin/maildirmake $MAILDIR`
	}

}

to "$MAILDIR"

