root:

# (re)start clapf if we have to
* * * * * /usr/local/bin/check_clapf.sh

unprivileged user:

# remove aged entries from the queue directory
# may decrease the TTL (3 in this example) by
# lowering the value of 'atime'
1 * * * * find /var/lib/clapf/queue -type f -atime +3 -exec rm -f '{}' \;

echo "delete t_queue where UNIX_TIMESTAMP() - ts > 604800" | mysql
