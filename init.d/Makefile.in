SHELL = @SHELL@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
sbindir = @sbindir@
includedir = @includedir@
libdir = @libdir@
libexecdir = @libexecdir@
srcdir = @srcdir@
sysconfdir = @sysconfdir@
mandir = @mandir@
datarootdir = @datarootdir@
localstatedir = @localstatedir@

CC = @CC@
CFLAGS = @CFLAGS@ @CPPFLAGS@
DEFS = @defs@
INCDIR = -I. -I../.. -I../../src @INCDIR@ @mysql_includes@
LIBDIR = -L. @LIBDIR@ @LDFLAGS@ -L../../src
LIBS = @LIBS@ @mysql_libs@
LDAP_LIBS = @ldap_libs@

INSTALL = @INSTALL@

all:
	sed -e "s%_PREFIX_%$(prefix)%" $(srcdir)/clapf.ubuntu.in > $(srcdir)/clapf.ubuntu
	sed -e "s%_PREFIX_%$(prefix)%" $(srcdir)/clapf.redhat.in > $(srcdir)/clapf.redhat
	sed -e "s%_PREFIX_%$(prefix)%" $(srcdir)/clapf-maillog.ubuntu.in > $(srcdir)/clapf-maillog.ubuntu
	sed -e "s%_PREFIX_%$(prefix)%" $(srcdir)/clapf-maillog.redhat.in > $(srcdir)/clapf-maillog.redhat

install:

clean:
	rm -f clapf.ubuntu clapf.redhat clapf-maillog.ubuntu clapf-maillog.redhat

distclean: clean
	rm -f Makefile
