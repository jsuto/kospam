objectclass ( 1.3.6.1.1.123456.2.0 NAME 'clapfPolicyGroup'
	DESC 'Abstraction of a clapf policy group'
	SUP top STRUCTURAL
	MUST ( policyGroup $ policyName )
	MAY ( deliverinfectedemail $ silentlydiscardinfectedemail $ useantispam $
	spamsubjectprefix $ enableautowhitelist $ maxmessagesizetofilter $
	rbldomain $ surbldomain $ spamoveralllimit $ spaminessoblivionlimit $
	replacejunkcharacters $ invalidjunklimit $ invalidjunkline $
	penalizeimages $ penalizeembedimages $ penalizeoctetstream $
	trainingmode $ initial1000learning $ storemetadata
        ) )


