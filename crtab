root:

# (re)start clapf if we have to
* * * * * /usr/local/bin/check_clapf.sh

unprivileged user:

# recreate the cdb database from the mysql token table
# (if you use the cdb backend)
*/10 * * * * /usr/local/bin/mysql2cdb.sh /opt/av/tmp/tokens /opt/av/.my.cnf && mv /opt/av/tmp/tokens.* /opt/av/

# remove aged entries from the queue directory
# may decrease the TTL (3 in this example) by
# lowering the value of 'atime'
1 * * * * find /opt/av/queue -type f -atime +3 -exec rm -f '{}' \;





echo "delete t_queue where UNIX_TIMESTAMP() - ts > 604800" | mysql
