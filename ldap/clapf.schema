# clapf.schema, 2006.06.29, SJ
#
# Attribute types are under 1.3.6.1.1.123456.1
# Object classes are under 1.3.6.1.1.123456.2

# Attribute Type Definitions

attributetype ( 1.3.6.1.1.123456.1.1 NAME 'spamOverallLimit'
	DESC 'Spam limit probability'
	EQUALITY caseExactIA5Match
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.26 SINGLE-VALUE )

attributetype ( 1.3.6.1.1.123456.1.2 NAME 'clapfEmail'
	DESC 'Email address of this user'
	EQUALITY caseIgnoreIA5Match
	SUBSTR caseIgnoreIA5SubstringsMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.26 SINGLE-VALUE )

attributetype ( 1.3.6.1.1.123456.1.3 NAME 'clapfAction'
        DESC 'What action to do in case of spam'
        EQUALITY caseIgnoreIA5Match
        SUBSTR caseIgnoreIA5SubstringsMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.26 SINGLE-VALUE )

attributetype ( 1.3.6.1.1.123456.1.4 NAME 'clapfPagelen'
        DESC 'Page length of the spam quarantine'
        EQUALITY caseIgnoreIA5Match
        SUBSTR caseIgnoreIA5SubstringsMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.26 SINGLE-VALUE )

# Object Class Definitions

objectclass ( 1.3.6.1.1.123456.2.0 NAME 'clapfAccount'
	DESC 'Abstraction of a clapf account'
	SUP top STRUCTURAL
	MUST ( cn $ Email )
	MAY ( spamOverallLimit $ clapfAction $ clapfPagelen ) )
